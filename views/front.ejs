            </div>

            <!-- Navbar links (visible on desktop) -->
            <div class="hidden md:flex space-x-6">
               
                <a href="/create" class="px-5 py-3 bg-transparent border-2 border-white text-white text-lg rounded-md hover:bg-white hover:text-blue-900 transition duration-300">Sign up</a>
                <a href="/login" class="px-5 py-3 bg-transparent border-2 border-white text-white text-lg rounded-md hover:bg-white hover:text-blue-900 transition duration-300">Login</a>

            </div>

            <!-- Hamburger menu (visible on mobile) -->
            <div class="md:hidden">
                <button class="text-white" id="menu-icon">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>

        <!-- Mobile menu (hidden by default) -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="flex flex-col items-center bg-black p-4">
                <a href="/login" class="text-white py-4 text-lg  hover:bg-blue-700 hover:text-yellow-500 rounded transition-all duration-300">Login</a>
                <a href="/create" class="text-white py-4 text-lg  hover:bg-blue-700 hover:text-yellow-500 rounded transition-all duration-300">Sign up</a>
            </div>
        </div>
    </nav>

    <!-- Main Content Section -->
    <div class="main-content">
        <div class="absolute inset-0 overlay"></div>
        <div class="relative z-10 text-white">
            <h1 class="text-4xl sm:text-6xl font-bold animate-text">
                Free Courses By <span class="text-yellow-400">Aniket Gupta</span>
            </h1>
            <p class="text-xl sm:text-2xl mt-4">Unlock your potential and learn for free today!</p>
        </div>

        <!-- Bubbles animation -->
        <div class="absolute top-0 left-0 w-full h-full pointer-events-none z-0">
            <div class="bubble white-bubble" style="width: 15px; height: 15px; top: 10%; left: 20%; animation-duration: 8s;"></div>
            <div class="bubble white-bubble" style="width: 12px; height: 12px; top: 30%; left: 40%; animation-duration: 7s;"></div>
            <div class="bubble white-bubble" style="width: 10px; height: 10px; top: 50%; left: 60%; animation-duration: 6s;"></div>
            <div class="bubble golden-bubble" style="width: 20px; height: 20px; top: 70%; left: 80%; animation-duration: 9s;"></div>
            <div class="bubble golden-bubble" style="width: 14px; height: 14px; top: 20%; left: 70%; animation-duration: 5s;"></div>
        </div>
    </div>

    <!-- Footer (Optional) -->
    <footer class="bg-gray-900 text-white py-4 fixed bottom-0 w-full">
        <div class="max-w-screen-xl mx-auto text-center">
            <p>&copy; Free Courses 2025 </p>
            <hr class="my-2 border-gray-600">
            <p>&copy; ANIKET GUPTA || 87701914XX || aniketkumargupta302@gmail.com.</p>
        </div>
    </footer>
    

    <!-- Add the following script for mobile menu toggle -->
    <script>
        // Mobile menu toggle
        document.getElementById('menu-icon').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>

</body>
</html>
