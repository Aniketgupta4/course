<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dark Theme with Animated Background</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Gradient animation for dark mode */
        @keyframes gradient-animation {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }

        .animated-background {
            background: linear-gradient(45deg, #1b2a49, #3b4e70, #1b2a49, #2d3c58);
            background-size: 400% 400%;
            animation: gradient-animation 10s ease infinite;
        }

        /* Floating bubbles animation */
        .bubble {
            position: absolute;
            border-radius: 50%;
            opacity: 0.6;
            animation: floatBubble 8s infinite ease-in-out;
        }

        .white-bubble {
            background-color: rgba(255, 255, 255, 0.6); /* White bubbles */
        }

        .golden-bubble {
            background-color: rgba(255, 223, 0, 0.7); /* Golden bubbles */
        }

        @keyframes floatBubble {
            0% {
                transform: translateY(0);
                opacity: 0.6;
            }
            50% {
                transform: translateY(-200px) translateX(50px);
                opacity: 0.9;
            }
            100% {
                transform: translateY(0);
                opacity: 0.6;
            }
        }

        /* Custom background for dark mode */
        .dark-mode {
            background-color: #1a1a1a;
            color: #f0f0f0;
        }
    </style>
</head>
<body class="bg-gray-100 dark:bg-gray-900 dark:text-white transition-colors duration-300 animated-background min-h-screen flex items-center justify-center relative">

    <!-- Floating Bubbles in Background -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none z-0">
        <!-- White Bubbles -->
        <div class="bubble white-bubble" style="width: 15px; height: 15px; top: 10%; left: 20%; animation-duration: 8s;"></div>
        <div class="bubble white-bubble" style="width: 12px; height: 12px; top: 30%; left: 40%; animation-duration: 7s;"></div>
        <div class="bubble white-bubble" style="width: 10px; height: 10px; top: 50%; left: 60%; animation-duration: 6s;"></div>

        <!-- Golden Bubbles -->
        <div class="bubble golden-bubble" style="width: 20px; height: 20px; top: 70%; left: 80%; animation-duration: 9s;"></div>
        <div class="bubble golden-bubble" style="width: 14px; height: 14px; top: 20%; left: 70%; animation-duration: 5s;"></div>
        <!-- Add more bubbles if desired -->
    </div>

    <!-- Main Content -->
    <div class="z-10 w-full max-w-md p-6 bg-white dark:bg-gray-800 shadow-lg rounded-lg text-center">
        <!-- Title -->
        <h1 class="text-3xl font-bold mb-4">Welcome to My World</h1>

        <!-- Message Section -->
        <p id="message" class="text-lg text-gray-700 dark:text-gray-300 mb-4">Hello Bacchooooo....</p>

        <!-- Button to trigger actions -->
        <a href="/login" id="actionLink" class="block bg-blue-500 text-white p-3 rounded-lg w-full text-center hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-600 focus:outline-none">
            Click here to Login
        </a>
    </div>

</body>
</html>
